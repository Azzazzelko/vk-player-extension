{
    "manifest_version": 2,
    
    "background": {
      "scripts": [
        "js/background.js",
        "js/jquery.js"
      ],
      "persistent": false
    },

    "content_scripts" : [
        {
            "js":[ 
              "js/jquery.js",
              "js/ElementQueries.js",
              "js/ResizeSensor.js",
              "js/content.js"
            ], 
            "matches":[ "https://vk.com/*", "http://vk.com/*" ],      
            "run_at":"document_end"  
        }
    ], 

    "description" : "Vk-player, позволяющий управлять открытой вкладкой аудиозаписей сайта Вконтакте.", 

    "name" : "VK-Player", 

    "browser_action": {
      "name": "Click me wtf!",
      "default_popup": "popup.html"
    },

    "permissions" : [  
      "<all_urls>",
      "unlimitedStorage", 
      "tabs", 
      "activeTab",
      "storage"
    ], 

    "version" : "1.0.0"
}